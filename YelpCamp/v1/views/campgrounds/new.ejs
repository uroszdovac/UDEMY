<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center;">Create new campground</h1>
    
    <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="name" id="" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" id="" placeholder="price" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" id="" placeholder="image url">
            </div>
            <div class="form-group">
                    <input class="form-control" type="text" name="description" id="" placeholder="description">
                </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
    
</div>

<% include ../partials/footer %>
